package com.recalot.common;

import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.io.PrintWriter;

/**
 * @author matthaeus.schmedding
 */
public class Helper {
    public static void Copy(PrintWriter out, InputStream stream) throws IOException {
        InputStreamReader reader = new InputStreamReader(stream);

        char[] buffer = new char[1024];

        int len =  reader.read(buffer);
        while (len != -1) {
            out.write(buffer, 0, len);
            len = reader.read(buffer);
        }

        reader.close();
    }

    public static class Keys {
        public static String ExperimentId = "experiment-id";
        public static String OutputParam = "output";
        public static String ItemId = "item-id";
        public static String UserId = "user-id";
        public static String SourceId = "source-id";
        public static String ConnectionId = "connection-id";
        public static String RecommenderId = "rec-id";
        public static String Type = "type";
        public static String DataSplitterId = "splitter-id";
        public static String State = "state";
        public static String Dir = "dir";
        public static String WishedId = "id";
    }
}
