package com.recalot.common.interfaces.model.experiment;

import com.recalot.common.communication.DataSet;
import com.recalot.common.interfaces.model.rec.Recommender;
import com.recalot.common.log.Logable;

import java.util.List;
import java.util.Map;

/**
 * Created by matthaeus.schmedding on 01.04.2015.
 */
public abstract class Experiment extends Logable {

    protected List<Metric> result;
    protected String dataSourceId;
    protected String[] recommenderIds;
    protected ExperimentState state;
    protected String id;
    protected Recommender[] recommenders;
    protected Metric[] metrics;
    protected Map<String, String> config;
    protected DataSet trainSet;
    protected DataSet testSet;

    public abstract void train();
    public abstract void test();

    public List<Metric> getResults() {
        return result;
    }

    public String getDataSourceId() {
        return dataSourceId;
    }

    public String[] getRecommenderIds() {
        return recommenderIds;
    }

    public ExperimentState getState() {
        return state;
    }

    public void setState(ExperimentState state) {
        this.state = state;
    }

    public String getId() {
        return id;
    }

    public void setTrainSet(DataSet trainSet) {
        this.trainSet = trainSet;
    }

    public DataSet getTrainSet() {
        return trainSet;
    }

    public void setTestSet(DataSet testSet) {
        this.testSet = testSet;
    }

    public DataSet getTestSet() {
        return testSet;
    }

    public enum ExperimentState {
        TRAINING,
        TESTING,
        FINISHED
    }
}
