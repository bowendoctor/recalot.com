package com.recalot.views.recommend.train;

import com.recalot.common.Helper;
import com.recalot.common.interfaces.controller.RecommendationsController;
import com.recalot.common.interfaces.model.RecommenderAccess;
import com.recalot.common.interfaces.template.TemplateResult;
import com.recalot.views.common.GenericControllerHandler;
import com.recalot.views.common.HTTPMethods;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.HashMap;
import java.util.Map;


/**
 * @author Matthaeus.schmedding
 */
public class Servlet extends HttpServlet {
    private GenericControllerHandler handler;

    public Servlet(GenericControllerHandler handler) {
        this.handler = handler;
    }

    /**
     * TODO: deactivate it later. Just for debugging
     *
     * @param req
     * @param res
     * @throws javax.servlet.ServletException
     * @throws java.io.IOException
     */
    @Override
    protected void doGet(HttpServletRequest req, HttpServletResponse res) throws ServletException, IOException {
        processRequest(req, res, HTTPMethods.GET);
    }

    @Override
    protected void doPost(HttpServletRequest req, HttpServletResponse res) throws ServletException, IOException {
        processRequest(req, res, HTTPMethods.POST);
    }

    @Override
    protected void doDelete(HttpServletRequest req, HttpServletResponse res) throws ServletException, IOException {
        processRequest(req, res, HTTPMethods.DELETE);
    }

    @Override
    protected void doPut(HttpServletRequest req, HttpServletResponse res) throws ServletException, IOException {
        processRequest(req, res, HTTPMethods.PUT);
    }


    protected void processRequest(HttpServletRequest req, HttpServletResponse res, HTTPMethods method) throws ServletException, IOException {
        String pathInfo = req.getPathInfo();

        //Collect all parameter
        Map<String, String> params = new HashMap<>();

        Map names = req.getParameterMap();
        if (names != null) {
            for (Object key : names.keySet()) {
                params.put((String) key, req.getParameter((String) key));
            }
        }


        //default template is text
        String templateKey = "json";

        if (params.containsKey(RecommendationsController.OutputParamKey)) {
            String tempKey = params.get(RecommendationsController.OutputParamKey);
            if (tempKey != null && !tempKey.equals("")) {
                templateKey = tempKey;
            }
        }


        TemplateResult result = null;
        try {
            if (pathInfo != null && !pathInfo.equals("") && !pathInfo.equals("/")) {
                //request: /{recommender-id}?source-id=xy&id=recommender-instance-id&args...
                pathInfo = pathInfo.substring(1);
                String[] split = pathInfo.split("/");

                if(split.length == 1){
                    params.put(RecommenderAccess.RecommenderIdKey, split[0]);

                    switch (method)
                    {
                        case GET:
                        {
                            result = handler.process(RecommendationsController.RecommenderRequestAction.GetRecommender, templateKey, params);
                            break;
                        }
                        case PUT:
                        {
                            result = handler.process(RecommendationsController.RecommenderRequestAction.UpdateRecommender, templateKey, params);
                            break;
                        }
                    }
                }
                if(split.length == 2 && split[0].toLowerCase().equals("sources")){
                    params.put(RecommendationsController.SourceIdKey, split[1]);

                    switch (method)
                    {
                        case PUT:
                        {
                            result = handler.process(RecommendationsController.RecommenderRequestAction.CreateRecommender, templateKey, params);
                            break;
                        }
                    }
                }
            }   else {
                switch (method){
                    case GET:
                    {
                        result = handler.process(RecommendationsController.RecommenderRequestAction.GetRecommenders, templateKey, params);

                        break;
                    }
                    case PUT:
                    {
                        result = handler.process(RecommendationsController.RecommenderRequestAction.CreateRecommender, templateKey, params);

                        break;
                    }
                }
            }
        } catch (Exception e) {
            e.printStackTrace();
        }

        if (result == null) {
            //   out.println("TODO print error");
        } else {
            res.setContentType(result.getContentType());
            res.setCharacterEncoding(result.getCharset().name());
            res.setStatus(result.getStatus());
            PrintWriter out = res.getWriter();
            Helper.Copy(out, result.getResult());
        }
    }
}